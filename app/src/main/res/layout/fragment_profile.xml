<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="org.sopt.myapplication.HomeData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.profile.ProfileFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/text_home_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="@string/sopt_hub"
                    android:textColor="@color/blue_37"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    imageBind="@{user.image}"
                    app:layout_constraintEnd_toEndOf="@+id/text_home_title"
                    app:layout_constraintStart_toStartOf="@+id/text_home_title"
                    app:layout_constraintTop_toBottomOf="@+id/text_home_title" />

                <TextView
                    android:id="@+id/text_home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/name"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/img_profile"
                    app:layout_constraintTop_toBottomOf="@+id/img_profile" />

                <TextView
                    android:id="@+id/text_home_input_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:text="@{user.name}"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/text_home_name"
                    app:layout_constraintTop_toTopOf="@+id/text_home_name" />

                <TextView
                    android:id="@+id/text_home_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/age"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/text_home_name"
                    app:layout_constraintTop_toBottomOf="@+id/text_home_name" />

                <TextView
                    android:id="@+id/text_home_input_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{user.age}"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/text_home_input_name"
                    app:layout_constraintTop_toTopOf="@+id/text_home_age" />

                <TextView
                    android:id="@+id/text_home_mbti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/mbti"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/text_home_age"
                    app:layout_constraintTop_toBottomOf="@+id/text_home_age" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{user.mbti}"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/text_home_input_age"
                    app:layout_constraintTop_toTopOf="@+id/text_home_mbti" />

                <TextView
                    android:id="@+id/text_introduce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="25dp"
                    android:text="@{user.introduce}"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_home_mbti" />

                <Button
                    android:id="@+id/btn_follower"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/follower"
                    android:maxLines="2"
                    android:backgroundTint="@color/blue_37"
                    app:layout_constraintTop_toBottomOf="@+id/text_introduce"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_repository"
                    android:layout_marginStart="50dp" />

                <Button
                    android:id="@+id/btn_repository"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/repository"
                    android:maxLines="3"
                    android:backgroundTint="@color/blue_37"
                    app:layout_constraintTop_toTopOf="@+id/btn_follower"
                    app:layout_constraintStart_toEndOf="@+id/btn_follower"
                    android:layout_marginStart="30dp" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragment_container_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_follower"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintStart_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>