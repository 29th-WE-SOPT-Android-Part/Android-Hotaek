<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SignInActivity">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_github"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" />


        <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id"
            style="@style/HeaderH1"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/img_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp" />

        <EditText
            android:id="@+id/et_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rectangle"
            android:hint="@string/input_id"
            android:includeFontPadding="false"
            style="@style/SectionH1"
            app:layout_constraintTop_toBottomOf="@+id/text_id"
            app:layout_constraintStart_toStartOf="@id/text_id"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="6dp"
            android:padding="12dp" />

        <TextView
            android:id="@+id/text_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            style="@style/HeaderH1"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/et_id"
            app:layout_constraintStart_toStartOf="@id/et_id"
            android:layout_marginTop="34dp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/input_password"
            android:background="@drawable/selector_rectangle"
            android:inputType="textPassword"
            style="@style/SectionH1"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="@+id/text_password"
            app:layout_constraintTop_toBottomOf="@+id/text_password"
            app:layout_constraintEnd_toEndOf="@id/et_id"
            android:layout_marginTop="6dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:backgroundTint="@color/sopt_pink"
            app:layout_constraintStart_toStartOf="@id/et_password"
            app:layout_constraintEnd_toEndOf="@id/et_password"
            app:layout_constraintTop_toBottomOf="@+id/et_password"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="173dp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/text_no_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_id"
            style="@style/SectionH4"
            android:includeFontPadding="false"
            android:textColor="@color/sopt_gray_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            android:layout_marginTop="16dp"
            android:layout_marginStart="105dp"/>

        <TextView
            android:id="@+id/text_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textColor="@color/sopt_gray_text"
            android:clickable="true"
            style="@style/SectionH5"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@+id/text_no_id"
            app:layout_constraintStart_toEndOf="@+id/text_no_id"
            android:layout_marginStart="8dp"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>