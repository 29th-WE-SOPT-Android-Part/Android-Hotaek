<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/text_signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sopt_hub"
        android:textColor="@color/blue_37"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/text_signup_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/text_signup_title"
        app:layout_constraintStart_toStartOf="@+id/text_signup_title"
        app:layout_constraintEnd_toEndOf="@+id/text_signup_title"/>


    <TextView
        android:id="@+id/text_signup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text_signup_signup"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/et_signup_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_border"
        android:hint="@string/input_name"
        app:layout_constraintTop_toBottomOf="@+id/text_signup_name"
        app:layout_constraintStart_toStartOf="@id/text_signup_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/text_signup_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_name"
        app:layout_constraintStart_toStartOf="@id/et_signup_name"
        android:layout_marginTop="50dp"/>
    <EditText
        android:id="@+id/et_signup_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/input_id"
        android:background="@drawable/login_border"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/text_signup_id"
        app:layout_constraintTop_toBottomOf="@+id/text_signup_id"
        app:layout_constraintEnd_toEndOf="@id/et_signup_name"
        android:layout_marginTop="10dp"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/text_signup_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_id"
        app:layout_constraintStart_toStartOf="@id/et_signup_id"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/et_singup_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/input_password"
        android:background="@drawable/login_border"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/text_signup_password"
        app:layout_constraintTop_toBottomOf="@+id/text_signup_password"
        app:layout_constraintEnd_toEndOf="@id/et_signup_id"
        android:layout_marginTop="10dp"
        android:padding="20dp"/>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/complete_signup"
        android:backgroundTint="@color/blue_37"
        app:layout_constraintStart_toStartOf="@id/et_singup_password"
        app:layout_constraintEnd_toEndOf="@id/et_singup_password"
        app:layout_constraintTop_toBottomOf="@+id/et_singup_password"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>